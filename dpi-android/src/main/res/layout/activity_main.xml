          style="@style/Widget.InputEdit"
          android:hint="@string/hint_xxhdpi"
          />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.InputLayout"
        >

      <android.support.design.widget.TextInputEditText
          android:id="@+id/xhdpi"
          style="@style/Widget.InputEdit"
          android:hint="@string/hint_xhdpi"
          />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.InputLayout"
        >

      <android.support.design.widget.TextInputEditText
          android:id="@+id/hdpi"
          style="@style/Widget.InputEdit"
          android:hint="@string/hint_hdpi"
          />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.InputLayout"
        >

